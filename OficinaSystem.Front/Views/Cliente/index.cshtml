<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        Material Dashboard 2 by Creative Tim
    </title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <!-- Nucleo Icons -->
    <link href="../assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- CSS Files -->
    <link id="pagestyle" href="../assets/css/material-dashboard.css?v=3.0.4" rel="stylesheet" />
</head>

<body class="g-sidenav-show  bg-gray-200">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3   bg-gradient-dark" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0" href=" https://demos.creative-tim.com/material-dashboard/pages/dashboard " target="_blank">
                <img src="../assets/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold text-white">Oficina System</span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white active bg-gradient-primary">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">dashboard</i>
                        </div>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Cliente" asp-action="Index" class="nav-link text-white">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">face</i>
                        </div>
                        <span class="nav-link-text ms-1">Cliente</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Funcionario" asp-action="Index" class="nav-link text-white ">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">person</i>
                        </div>
                        <span class="nav-link-text ms-1">Funcionario</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Pedido" asp-action="Index" class="nav-link text-white">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">receipt_long</i>
                        </div>
                        <span class="nav-link-text ms-1">Pedido</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Produto" asp-action="Index" class="nav-link text-white">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">inventory</i>
                        </div>
                        <span class="nav-link-text ms-1">Produto</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Servico" asp-action="Index" class="nav-link text-white">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">build_circle</i>
                        </div>
                        <span class="nav-link-text ms-1">Serviço</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>



    <main class="main-content position-relative max-height-vh-150 h-150 border-radius-lg ">
        <div class="container-fluid py-6">
            <div class="card mb-2">
                <div class="card-body">
                    <button class="btn btn-success text-white" id="btnNovoRegistro"><i class="fa fa-plus pull-right"></i> Novo Registro</a></button>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card my-4">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                                <h6 class="text-white text-capitalize ps-3">Cadastro de Clientes</h6>
                            </div>
                        </div>
                        <div class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
                            <div class="card-body">

                                <div class="table-responsive" id="destroy">
                                    <table class="table table-striped" id="ClienteCadastrado">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Nome</th>
                                                <th scope="col">Cpf</th>
                                                <th scope="col">Endereço</th>
                                                <th scope="col">Opções</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class=" modal fade modal_confirm" id="modalNovoRegistro">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Novo Registro</h4>
                </div>
                <div class="modal-body">
                    <div class="card-body">
                        <div class="row col-md-6">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Nome</label>
                                    <input type="text" class="form-control" id="txtNome" maxlength="100">
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row col-md-4">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">CPF</label>
                                    <input type="text" class="form-control" id="txtCpf" maxlength="11">
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row col-md-6">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Endereço</label>
                                    <input type="text" class="form-control" id="txtEndereco" maxlength="100">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="salvar_registro">Inserir</button>
                    <button type="button" id="btnVoltar" data-dismiss="modal" class="btn btn-danger"> Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <div class=" modal fade modal_confirm" id="modalAlterarRegistro">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Novo Registro</h4>
                </div>
                <div class="modal-body">
                    <div class="card-body">
                        <div class="row col-md-3">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Id</label>
                                    <input type="text" class="form-control" id="txtId" maxlength="10" readonly>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row col-md-6">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Nome</label>
                                    <input type="text" class="form-control" id="txtNomeAlt" maxlength="100">
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row col-md-4">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">CPF</label>
                                    <input type="text" class="form-control" id="txtCpfAlt" maxlength="11">
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row col-md-6">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Endereço</label>
                                    <input type="text" class="form-control" id="txtEnderecoAlt" maxlength="100">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="alterar_registro"> Salvar</button>
                    <button type="button" id="btnVoltar" data-dismiss="modal" class="btn btn-danger"> Fechar</button>
                </div>
            </div>
        </div>
    </div>


    <div class=" modal fade modal_confirm" id="modalConfirmarExclusao">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"> Excluir Registro</h4>
                </div>
                <div class="modal-body">
                    <p>
                        A confirmação resultará na exclusão permanente do item.
                        <br /><br />
                        Tem certeza que deseja excluir este registro?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="delete_registro">SIM</button>
                    <button type="button" id="btnVoltar" data-dismiss="modal" class="btn btn-danger">NÃO</button>
                </div>
            </div>
        </div>
    </div>



    <!--   Core JS Files   -->
    <script src="../assets/js/core/popper.min.js"></script>
    <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="../assets/js/material-dashboard.min.js?v=3.0.4"></script>
</body>

</html>

@section Scripts {
    <script src="~/scripts/cliente.js"></script>
}